<header>
	<!-- *****************************************************************************************************************
							         *********************************************************************************************************************
							         ***************************************************************************************************** VERSION TELEPHONE -->
<section class="section-header-mobile">
    <div class="container-header-mobile">
        <div class="wrapper-header-mobile">

		<div class="polygones-mobiles">
            <!-- Polygone 1 -->
            <div class="polygone1-mobile animate-float">
                <img src="/images/Phone - Quiz sélection/Déco haut gauche/P-1.png" alt="Polygone 1">
            </div>
            <!-- Polygone 2 -->
            <div class="polygone2-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut gauche/P-2.png" alt="Polygone 2">
            </div>
            <!-- Polygone 3 -->
            <div class="polygone3-mobile animate-float">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-5.png" alt="Polygone 3">
            </div>
            <!-- Polygone 4 -->
            <div class="polygone4-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-3.png" alt="Polygone 4">
            </div>
            <!-- Polygone 5 -->
            <div class="polygone5-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut gauche/P-3.png" alt="Polygone 5">
            </div>
            <!-- Polygone 6 -->
            <div class="polygone6-mobile animate-float">
                <img src="/images/Phone - Quiz sélection/Déco haut gauche/P-4.png" alt="Polygone 6">
            </div>
            <!-- Polygone 7 -->
            <div class="polygone7-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-4.png" alt="Polygone 7">
            </div>
            <!-- Polygone 8 -->
            <div class="polygone8-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-6.png" alt="Polygone 8">
            </div>
            <!-- Polygone 9 -->
            <div class="polygone9-mobile animate-float">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-2.png" alt="Polygone 9">
            </div>
            <!-- Polygone 10 -->
            <div class="polygone10-mobile animate-float2">
                <img src="/images/Phone - Quiz sélection/Déco haut droite/P-1.png" alt="Polygone 10">
            </div>
            <!-- Polygone 11 -->
            <div class="polygone11-mobile animate-float2">
                <img src="/images/Phone - Quiz question/Décoration haut gauche/P-6.png" alt="Polygone 11">
            </div>
            <!-- Polygone 12 -->
            <div class="polygone12-mobile animate-float">
                <img src="/images/Phone - Quiz question/Décoration haut gauche/P-5.png" alt="Polygone 12">
            </div>
		</div>

            <!-- Numéro de question -->
            <div class="question-box-mobile">
                <img src="/images/Phone - Quiz question/Décoration haut gauche/Question.png" alt="Numéro question">
                <h4 class="question-number changa-one-regular">{{ index + 1 }}</h4>
                <h5 class="total-questions changa-one-regular">/{{ totalQuestions }}</h5>
            </div>

            <!-- Nom du quiz et question -->
            <div class="quiz-info-mobile">
                <h1 class="quiz-name changa-one-regular">{{ quiz.name }}</h1>
                <h2 class="quiz-question changa-one-regular">{{ question.getQuestion }}</h2>
            </div>
        </div>
    </div>
</section>





	<!-- *****************************************************************************************************************
							     *********************************************************************************************************************
							     ***************************************************************************************************** VERSION ORDINATEUR -->

	<!-- HAUT A GAUCHE -->
	<section class="section-header-desktop">
		<section class="section-header-desktop-left">
			<!-- Conteneur principal -->
			<div class="container-desktop-left">
				<div class="div-desktop-left">
					<!-- Polygone 1 -->
					<div class="polygone1-desktop-left animate-float">
						<img src="/images/Desktop - Quiz selection/Deco haut gauche/P-1.png" alt="Polygone 1" class="hidden lg:block">
					</div>
					<!-- Polygone 2 -->
					<div class="polygone2-desktop-left animate-float2">
						<img src="/images/Desktop - Quiz selection/Deco haut gauche/P-2.png" alt="Polygone 2" class="hidden lg:block">
					</div>
					<!-- Polygone 3 -->
					<div class="polygone3-desktop-left animate-float2">
						<img src="/images/Desktop - Quiz selection/Deco haut gauche/P-4.png" alt="Polygone 3" class="hidden lg:block">
					</div>
					<!-- Polygone 4 -->
					<div class="polygone4-desktop-left animate-float">
						<img src="/images/Desktop - Quiz selection/Deco haut gauche/P-3.png" alt="Polygone 4" class="hidden lg:block">
					</div>

					<div class="carré-quote-desktop-left">
						<img src="/images/Desktop - Quiz question/Décoration haut gauche/Question.png" alt="Polygone question">
						<h4 class="changa-one-regular">
							{{ index + 1 }}</h4>
						<h5 class="changa-one-regular">
							/{{ totalQuestions }}
						</h5>
					</div>
				</div>
			</div>
		</section>

		<!-- HAUT A DROITE -->
		<section class="section-header-desktop-right">
			<h1 class="changa-one-regular">
				{{ quiz.name }}
			</h1>
			<div class="section-header-desktop-div-interrogation">
				<img src="/images/Desktop - Quiz question/Point interrogation.png" alt="Point d'interrogation">
			</div>
			<h2 class="changa-one-regular">
				{{ question.getQuestion}}
			</h2>
			<div class="div-desktop-right-polygone">
				<div class="div2-desktop-right-polygone">
					<!-- Polygone 1 -->
					<div class="polygone1-desktop-right animate-float">
						<img src="/images/Desktop - Quiz question/Décoration haut droite/P-1.png" alt="Polygone 1">
					</div>
					<!-- Polygone 2 -->
					<div class="polygone2-desktop-right animate-float">
						<img src="/images/Desktop - Quiz question/Décoration haut droite/P-2.png" alt="Polygone 2">
					</div>
					<!-- Polygone 3 -->
					<div class="polygone3-desktop-right animate-float2">
						<img src="/images/Desktop - Quiz question/Décoration haut droite/P-3.png" alt="Polygone 3">
					</div>
					<!-- Polygone 4 -->
					<div class="polygone4-desktop-right animate-float">
						<img src="/images/Desktop - Quiz question/Décoration haut droite/P-4.png" alt="Polygone 4">
					</div>
					<!-- Polygone 5 -->
					<div class="polygone5-desktop-right animate-float2">
						<img src="/images/Desktop - Quiz question/Décoration haut droite/P-5.png" alt="Polygone 4">
					</div>
				</div>
			</div>

		</section>
	</section>

</header>
