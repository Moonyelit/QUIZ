{% extends 'base.html.twig' %}

{% block title %}QUIZ || S'ENREGISTRER
{% endblock %}

{% block body %}
	<section class="relative h-screen max-w-full lg:h-[calc(100vh-20px)] m-10 p-10 bg-gradient-clair-orange border-t-[7px] border-l-[7px] border-r-[15px] border-b-[15px] border-primary rounded-[42px] lg:mx-[1%] lg:my-[2%] overflow-y-hidden box-border items-center">
		{% block header %}
			{% include "header/headerRegister.html.twig" %}
		{% endblock %}

		{% block main %}
			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm, {
                'attr': {
                    'id': 'register-form',
                    'role': 'form',
                    'method': 'post',
                    'autocomplete': 'off',
                    'data-parsley-validate': ''
                }
            }) }}

			<div class="flex flex-col justify-center items-center w-full lg:w-1/2 lg:mx-auto lg:my-auto lg:flex lg:flex-col lg:justify-center lg:items-center">
				{{ form_row(registrationForm.username, {
                    'label_attr': {
                        'class': 'font-changa text-3xl lg:text-5xl',
                        'style': 'font-size: 1.75rem'
                    },
                    'attr': {
                        'class': 'border-[3px] border-black rounded-[17px] shadow-inner-lg bg-white w-full h-10 lg:h-14 pl-3'
                    }
                }) }}


				{{ form_row(registrationForm.plainPassword, {
                'label_attr': {
                        'class': 'font-changa text-3xl lg:text-5xl',
                        'style': 'font-size: 1.75rem'
                    },
                    'attr': {
                        'class': 'border-[3px] border-black rounded-[17px] shadow-inner-lg bg-white w-full h-10 lg:h-14 pl-3'
                    }
            }) }}

			</div>

			<button type="submit" class="btn">Register</button>
			{{ form_end(registrationForm) }}
		{% endblock %}

		{% block footer %}
			{% include "footer/footerHome.html.twig" %}
		{% endblock %}
	</section>
{% endblock %}
